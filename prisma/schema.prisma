generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Auction {
  id        String   @id @map("_id") @db.ObjectId
  item_id   String
  seller    String
  buyer     String
  timestamp DateTime @default(now())
  price     Int
  extra     Json
}
